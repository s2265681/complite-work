.like-container{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-right: 30rpx;
}
.share{
  width:40rpx;
  height:40rpx;
}

.share-btn {
margin-top:20rpx;
  margin-left: 10rpx;
}

.share {
  /* padding:10rpx; */
  width: 40rpx;
  height: 40rpx;
}

.posting-container .comment-container {
  width: 690rpx;
  padding: 0 30rpx;
}

.post-header {
  width: 100%;
  border-bottom: 1px solid #f5f5f5;
  border-top: 1px solid #f5f5f5;
  height: 100rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.post-header > text:first-child {
  font-size: 28rpx;
  color: #bbb;
}

.cancel {
  color: #666;
}

.post-header text {
  padding: 25rpx;
}

.num {
  margin-left: 5px;
  font-size: 22rpx;
  color: #aaa;
}

