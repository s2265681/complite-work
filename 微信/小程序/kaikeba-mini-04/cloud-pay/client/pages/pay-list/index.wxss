.good-item {
  display: flex;
  width: 100%;
  padding: 20rpx;
  border-bottom: 1px solid #eee;
}

.good-image > image {
  width: 300rpx;
  height: 200rpx;
  border: 1px solid #eee;
}

.good-image {
  padding-left: 20rpx;
}

.good-detail {
  font-size: 28rpx;
  margin-left: 20rpx;
}

.button {
  margin-top: 10rpx;
  height: 60rpx;
  font-size: 24rpx;
}

.container .cart {
  position: fixed;
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  right: 40rpx;
  bottom: 100rpx;
  background: #fff;
}

.container .cart image {
  width: 100rpx;
  height: 100rpx;
}