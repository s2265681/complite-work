{
  "compilerOptions": {
    "outDir": "./build/",
    "sourceMap": true,
    "strict": false,
    "module": "esnext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noImplicitAny": false,
    "allowJs": false,
    "allowUnreachableCode": true,
    "resolveJsonModule": true,
    "target": "es5",
    "lib": ["es2015", "es2016", "es2017", "esnext", "dom"],
    "types": ["node"],
    "baseUrl": "src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.vue"],
  "exclude": ["node_modules"]
}
